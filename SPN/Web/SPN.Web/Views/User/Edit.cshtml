@model UserEditInputModel

<div class="row">
    <div class="col-lg-12 justify-content-center">
        <form method="post">
            <h2>Update Details</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <textarea asp-for="@Model.PhoneNumber" class="form-control z-depth-1" rows="4" placeholder="Phone number"></textarea>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <textarea asp-for="@Model.Email" class="form-control z-depth-1" rows="4" placeholder="Email"></textarea>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <p>Profile Picture</p>
                    <input asp-for="@Model.ProfilePicture" type="file" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>